@model CoronaData.Models.WebshopViewModel

<div class="card bg-dark text-white">
    <img class="card-img img-fluid " src="~/images/home-banner.jpg" />
    <div class="card-img-overlay text-lg-left">
        <h1 class="display-3 font-weight-bolder"style="font-size:3rem">Webshop</h1>
        <div class="car-footer">
            <p class="lead font-weight-bold" style="font-size:1rem">Koop hier uw mondmaskers, handsanitizers en ontsmettingsalcohol</p>
        </div>
       
    </div>
</div>
<br />

<div class="row">
    @if (Model.Soorten != null)
    {
        @foreach (var soort in Model.Soorten)
        {
            <div class="btn-toolbar">
                <a class=" btn btn-secondary" style="margin:10px" asp-action="KiesSoort" asp-controller="Webshop" asp-route-id="@soort.Id">@soort.Naam</a>
            </div>
        }
    }
</div>

@if (Model.Producten.Count > 0)
{
    <div class="card-deck ">
        @foreach (var product in Model.Producten)
        {
            var png = ".png";
            <div class="card" style="max-width:250px;">
                <div class="card-body">
                    <img class="card-img-top" src="~/images/@product.Id@png" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@product.Naam</h5>
                        <div class="text-center font-weight-bold">
                            <p>@Html.DisplayFor(m => product.Prijs)</p>
                        </div>
                    </div>
                    <br />
                        <div class="btn-toolbar d-flex justify-content-center">
                            <a style="margin:10px;" class="btn btn-outline-dark  lager" data-id="@product.Id">-</a>
                            <span class="aantal">@product.Aantal</span>
                            <a style="margin:10px;" class="btn btn-outline-dark hoger" data-id="@product.Id">+</a>
                        </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script src="~/js/mandje.js" type="text/javascript"></script>
}




